<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.demo.board.SouthPointer
            android:id="@+id/sp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            app:sp_scale_long_color="#ffffff"
            app:sp_scale_short_color="#efefef" />

        <com.demo.board.HorizontalPointer
            android:id="@+id/hp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            app:hp_scale_long_color="#ffffff"
            app:hp_scale_short_color="#efefef" />
    </LinearLayout>

    <com.demo.board.VerticalPointer
        android:id="@+id/vp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:vp_scale_long_color="#ffffff"
        app:vp_scale_short_color="#efefef" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_sp_head"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <EditText
            android:id="@+id/et_sp_foot"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <EditText
            android:id="@+id/et_sp_board"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置指南针" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_hp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置水平仪" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_vp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置高度仪" />
    </LinearLayout>
</LinearLayout>
